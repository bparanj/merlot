
<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "I forgot my password", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "I didn't receive confirmation instructions", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "I didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>