<div class="login">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <p><%= f.label :email %><br />
	  <%= f.text_field :email %></p>

	  <p>
		<%= f.label :password %><br />
	  	<%= f.password_field :password %>
	  </p>

	  <% if devise_mapping.rememberable? -%>
	    <p><%= f.check_box :remember_me %> Remember me on this computer</p>
	  <% end -%>

	  <p><%= f.submit "Sign in" %></p>
	<% end %>

	  <div class="extras"> 
	    <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
			<strong>Help:</strong><br/>
		  <%= link_to "I forgot my password", new_password_path(resource_name) %><br />
		<%= link_to "I didn't receive confirmation instructions", new_confirmation_path(resource_name) %><br />
		<%= link_to "I didn't receive unlock instructions", new_unlock_path(resource_name) %><br />
		<% end -%>
	  </div>
</div>