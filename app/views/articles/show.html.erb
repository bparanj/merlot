<p>
  <h1> <%= @article.title %> </h1>
</p>

<p>
  <%= raw(@article.content) %>
</p>

<p>
   <b>Tags:</b> <%= raw(related_articles(@article.tag_list)) %> 
</p>

<br/>

<div> 
	<%= tweet_button(:via => "CreditCardLogic", :url => polymorphic_url(@article), :text  => "Check this out!") %>
	
  <div class="fb-like" data-href="<%= @fb_like_url %>" data-send="true" data-width="450" data-show-faces="false"></div>
</div>		
		
<%= link_to left_arrow("Back"), articles_path %> 

<% if admin_signed_in? %>|
	<%= link_to 'Edit', edit_article_path(@article) %> 
<% end %>


<% content_for :meta_tags do %>

  <% if @show_related %>
		<% set_meta_tags :title  => @article.title, 
										 :description => raw(truncate(@article.content, :length => 500, :omission => ' ...')), 
										 :noindex => true, 
										 :nofollow => true %>
	<% else %>
	  	<% set_meta_tags :title  => @article.title, 
											 :description => raw(truncate(@article.content, :length => 500, :omission => ' ...')),
 											 :canonical => article_path(@article),
 											 :open_graph => { :title => "Mashable", :type => 'blog', :url => 'www.creditcardslogic.com',
												 								:image => 'http://www.image.com/dfasdfasdfasdfasdf.jpg',
																				:site_name => 'Credit Cards Logic Site',
																				:admins => "100000846404274",
																				:description => "og_description"} %>
	<%- end -%>
	
<%- end -%>
