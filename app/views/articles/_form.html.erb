
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
	<%= render :partical => "shared/error_messages", :target => @article   %>
  <% end %>
	<p>
		<%= f.label :title %><br />
	    <%= f.text_field :title, :size => 100  %>
	</p>	
	<p>
		<%= f.label :content %><br />
	    <%= f.text_area :content, :rows => 25, :class => 'mceEditor' %>
	</p>
		
	<p>
		<%= f.label :published_on %><br />
	    <%= f.text_field :published_on, :size => 15  %>
	</p>
	<p>
    	<%= f.submit 'Submit Article'%>		
	</p>


<% end %>


