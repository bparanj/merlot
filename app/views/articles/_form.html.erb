<% content_for :head do %> 
<%= stylesheet_link_tag '/javascripts/wymeditor/examples/styles.css' %>
<%= javascript_include_tag('/javascripts/wymeditor/wymeditor/jquery.wymeditor.js') %>
<%= javascript_include_tag('/javascripts/wymeditor/wymeditor/plugins/hovertools/jquery.wymeditor.hovertools.js') %>
<%= javascript_include_tag('/javascripts/wymrails.js') %>
<% end %>

<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<p>
		<%= f.label :title %><br />
	    <%= f.text_field :title %>
	</p>	
	<p>
		<%= f.label :content %><br />
	    <%= f.text_area :content, :rows => 20, :class => 'wymeditor' %>
	</p>
	
	<p>
		<%= f.label :published_on %><br />
	    <%= f.text_field :published_on %>
	</p>
	<p>
    	<%= f.submit %>		
	</p>


<% end %>


