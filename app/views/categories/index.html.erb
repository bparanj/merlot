<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for category in @categories %>
    <tr>
      <td>
				<%= link_to category.name, category %>
			</td>
			<% if admin_signed_in? %>
			  <td>
			    <%= link_to "Edit", edit_category_path(category) %>
			  </td>
			<% end %>
    </tr>
  <% end %>
</table>

<% if admin_signed_in? %>
  <p><%= link_to "New Category", new_category_path %></p>
<% end %>