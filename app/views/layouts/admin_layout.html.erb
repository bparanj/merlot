<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
	<title><%= h(yield(:title) || "Merlot") %></title>
	<%= csrf_meta_tag %>
	<%= stylesheet_link_tag 'admin', 'common' %>
	<%= javascript_include_tag :defaults %>
	<%= yield(:head) %>
</head>
<body>

	<div id="Header">
		<div class="navigation">&nbsp;</div>
		<!-- TABS -->
		<div id="Tabs">
			<ul id="MainTabs">
				<li>
					<%= link_to 'Dashboard', admins_path, :class => is_active?("admins") %>
				</li>
				<li>
					<%= link_to 'Articles', new_article_path, :class => is_active?("articles") %>
				</li>
				<li>
					<%= link_to 'Users', "www.google.com", :class => is_active?("home") %>
				</li>
				<li>
					<%= link_to 'Profile', "www.google.com", :class => is_active?("home") %>
				</li>
				<li>
					<%= link_to 'Logout', destroy_admin_session_path, :class => is_active?("devise/sessions") %>	
				</li>
			</ul>
		</div>
	</div>

	<%- flash.each do |name, msg| -%>
	<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
	<%- end -%>

	<div id="Wrapper">
		<div class="container">
			<div class="clearfix"></div>
			<div class="fleft content-container">
				<div class="page_header">    
					<div class="link_back" style="float:left;">
						<a href="#">Â« All Messages</a>
					</div>
					<div class="page_header_links">
						<a href="#" class="admin">New message</a> | 
						<a href="#" class="admin">Edit this message</a> 
					</div>
				</div>

				<div class="content-wrapper">
					<div class="content">

						<%- if show_title? -%>
						<h1><%=h yield(:title) %></h1>
						<%- end -%>

						<%= yield %>


					</div>	
				</div>	
			</div>
			<div class="fleft right-container">
				<div class="right-content-container">
					<div class="right-content">
					</div>	
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</body>
</html>


