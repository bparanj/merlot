<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Merlot") %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>

	   <% if admin_signed_in? -%>
	     <div id="admin_login_box" style="float:left">
		    <p>
				 <%= link_to 'Dashboard', admins_path %> | 
				 <%= link_to 'Articles', "www.google.com" %> |
		  		 <%= link_to 'Users', "www.google.com" %> |
		  		 <%= link_to 'Profile', "www.google.com" %> |
				 <%= link_to 'Logout', destroy_admin_session_path %>
		  	 </p>
          </div>
		  <p>You are signed in as: <%= current_admin.email %></p>
	    <% end -%>

      <div style="clear:both"></div>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>
    <%= javascript_include_tag :defaults %>
  </body>
</html>


